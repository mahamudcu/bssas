<!--<p id="notice"><%#= notice %></p>-->
<div class="panel-header bg-primary-gradient">
  <div class="page-inner py-5">
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
      <div>
        <h2 class="text-white pb-2 fw-bold">Committees</h2>
      </div>
      <div class="ml-md-auto py-2 py-md-0">
        <%= link_to 'New Committee', new_committee_path , class:"btn btn-secondary btn-round" %>
      </div>
    </div>
  </div>
</div>
<div class="page-inner mt--5">
  <div class="row row-card-no-pd">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <div class="card-head-row card-tools-still-right">
            <h4 class="card-title">Committees</h4>
            <div class="card-tools">
            </div>
          </div>
          <p class="card-category">
            Map of the distribution of users around the world</p>
        </div>
        <div class="card-body">
          <div class="col-md-12">
            <div class="table-responsive table-hover table-sales">
              <table class="table">
                <thead>
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Duration</th>
                  <th>Duration date</th>
                  <th>Establish date</th>
                  <th>Closing date</th>
                  <th>Active</th>
<!--                  <th>Committee designation</th>-->
                  <th colspan="3"></th>
                </tr>
                </thead>

                <tbody>
                <% @committees.each do |committee| %>
                  <tr>
                    <td><%= committee.title %></td>
                    <td><%= committee.description %></td>
                    <td><%= committee.duration %></td>
                    <td><%= committee.duration_date %></td>
                    <td><%= committee.stablish_date %></td>
                    <td><%= committee.clossing_date %></td>
                    <td><%= committee.active %></td>
<!--                    <td><%#= committee.committee_designation.title %></td>-->
                    <td><%= link_to 'Show', committee %></td>
                    <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
                    <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



