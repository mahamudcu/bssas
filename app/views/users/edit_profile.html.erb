<div class="panel-header bg-primary-gradient">
  <div class="page-inner py-5">
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
      <div>
        <h2 class="text-white pb-2 fw-bold">Profile</h2>
      </div>
      <div class="ml-md-auto py-2 py-md-0">
        <%= link_to 'Back', profile_path, class:"btn btn-white btn-border btn-round mr-2" %>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <div class="card-title">Edit Profile</div>
  </div>

  <%= form_for(@user, url: { action: :update_profile}) do |form| %>
    <%= form.hidden_field 'id', value: @user.id  %>
<%#= form_with model: user, url: { action:  update_profile_path }, local: true do |form| %>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name,class: "form-control" %>
          </div>


        </div>
        <div class="col-md-6 ">
          <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email,class: "form-control" %>
          </div>

        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :phone %>
            <%= form.text_field :phone,class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :age %>
            <%= form.text_field :age,class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :dob %>
            <%= form.date_field :dob, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :image %>
            <%= form.file_field :image,class: "form-control" %>
          </div>
        </div>

      </div>
      <div class="card-action">
        <%= form.submit 'Submit',class: 'btn btn-success' %>
        <%#= link_to 'Back', users_path, class:"btn btn-danger" %>
      </div>
    </div>

  <% end %>


</div>
